{
	"manifest_version": 2,

	"name": "Website Blocker",
	"description": "This extension blocks the specified websites",
	"version": "1.0",

	"browser_action": {
		"default_icon": "assets/icon.png"
		// "default_popup": "popup/popup.html"
	},
	"permissions": ["storage", "webNavigation", "activeTab"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	}
}
